@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazar Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.BlogId</td>
    <td>@item.BlogTitle</td>
    <td>@item.BlogCreateDate</td>
    <td>@item.CategoryId</td>
    <td>@item.BlogStatus</td>
    <th><a href="#" class="btn btn-danger">Sil</a></th>
    <th><a href="#" class="btn btn-warning">Düzenle</a></th>
</tr>
    }
</table>
<a href="#" class="btn btn-info">Yeni blog Oluştur</a>
