@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazar Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.BlogId</th>
    <td>@item.BlogTitle</td>
    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
    <td>@item.Category.CategoryName</td>
    <td>
        @if (item.BlogStatus)
        {
            <span class="badge badge-success">Aktif</span>
        }
        else
        {
            <span class="badge badge-secondary">Pasif</span>
        }
    </td>
    <th><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger" onclick="return confirm('Silme işlemi yapmak istediğinize emin misiniz?')" >Sil</a></th>
    <th><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></th>
</tr>
    }
</table>
<a href="#" class="btn btn-info">Yeni blog Oluştur</a>
