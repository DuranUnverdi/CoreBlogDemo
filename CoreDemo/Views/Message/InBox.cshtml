@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.MessageId</th>
    <td>@item.Subject</td>
    <td>@item.SenderUser.WriterName</td>
    <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
    <th><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-danger" onclick="return">Mesajı Aç</a></th>
</tr>
    }
</table>
<a href="/Message/Inbox" class="btn btn-info">Yeni Mesaj Oluştur</a>

